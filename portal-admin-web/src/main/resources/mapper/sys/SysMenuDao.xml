	<sql id="selectAllItems">
		id,parent_id,name,url,perms,type,icon,open_type,order_num,
		create_user,create_user_name,create_time,modify_user,modify_time
    </sql>

	<select id="queryForList"  resultType="com.tan.portal.web.sys.entity.SysMenu">
		select <include refid="selectAllItems"/>
		from sys_menu
		<include refid="where_sql"/>
		order by order_num asc
	</select>

	<select id="queryById" resultType="com.tan.portal.web.sys.entity.SysMenu">
		select <include refid="selectAllItems"/>
		from sys_menu
		where id = #{id}
	</select>

	<select id="queryNotButtonList" resultType="com.tan.portal.web.sys.entity.SysMenu">
		select <include refid="selectAllItems"/>
		from sys_menu where type != 2 order by order_num asc
	</select>

	<select id="queryListParentId" resultType="com.tan.portal.web.sys.entity.SysMenu">
		select <include refid="selectAllItems"/>
		from sys_menu where parent_id = #{parentId} order by order_num asc
	</select>

	<!-- 查询用户的所有菜单ID -->
	<select id="queryAllMenuId" resultType="long">
		select distinct rm.menu_id from sys_user_role ur
			LEFT JOIN sys_role_menu rm on ur.role_id = rm.role_id
		where ur.user_id = #{userId}
	</select>

	<sql id="where_sql">
		<where>
			<if test="id !=null and id != ''">
				id = #{id}
			</if>
			<if test="parentId !=null and parentId != ''">
				and parent_id = #{parentId}
			</if>
			<if test="name !=null and name != ''">
				and name like concat('%', #{name}, '%')
			</if>
			<if test="type !=null and type != ''">
				and type = #{type}
			</if>
			<!--<if test="type and type != ''">-->
			<!--and  bitor(type,#{type})=type-->
			<!--</if>-->

		</where>
	</sql>
	
</mapper>